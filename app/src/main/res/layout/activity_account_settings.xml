<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Fixed Header Section with Gradient Background -->
    <RelativeLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbar_home"
        android:padding="@dimen/spacing_16"
        android:elevation="@dimen/header_elevation">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvBackLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/btnBack"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/back_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <!-- Content Container with Icon and Text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBack"
            android:layout_marginTop="@dimen/spacing_large"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Settings Icon Circle -->
            <ImageView
                android:id="@+id/iconSettings"
                android:layout_width="@dimen/icon_56"
                android:layout_height="@dimen/icon_56"
                android:padding="@dimen/drawable_padding"
                android:background="@drawable/circle_bg"
                android:backgroundTint="@color/blue_translucent_74"
                android:src="@drawable/ic_setting"
                app:tint="@color/white"
                android:contentDescription="@string/settings_account" />

            <!-- Text Container -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_account"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_h2" />

                <TextView
                    android:id="@+id/tvHeaderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xxxsmall"
                    android:text="@string/account_settings_subtitle"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_button"
                    android:alpha="0.9" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Scrollable Content Below Header -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerSection"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Photo Card with White Background -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginStart="@dimen/spacing_16"
                android:layout_marginEnd="@dimen/spacing_16"
                app:cardCornerRadius="@dimen/corner_radius_16"
                app:cardElevation="@dimen/card_elevation_high">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large"
                    android:gravity="center">

                    <!-- Profile Photo with Camera Icon -->
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/spacing_small"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <ImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="@dimen/avatar_120"
                            android:layout_height="@dimen/avatar_120"
                            android:src="@drawable/ic_profil_v2"
                            android:contentDescription="@string/profile_photo_desc"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_bg" />

                        <!-- Camera Icon Badge -->
                        <ImageView
                            android:layout_width="@dimen/icon_36"
                            android:layout_height="@dimen/icon_36"
                            android:layout_alignEnd="@id/imgProfile"
                            android:layout_alignBottom="@id/imgProfile"
                            android:layout_marginEnd="@dimen/offset_neg_small"
                            android:layout_marginBottom="@dimen/offset_neg_small"
                            android:src="@drawable/ic_camera"
                            android:background="@drawable/circle_bg"
                            android:backgroundTint="@color/white"
                            android:padding="@dimen/spacing_small"
                            android:elevation="@dimen/header_elevation"
                            android:contentDescription="@string/action_change_photo"
                            app:tint="@color/primary_blue" />
                    </RelativeLayout>

                    <!-- Change Photo Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnChangePhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_16"
                        android:paddingHorizontal="@dimen/spacing_large"
                        android:paddingVertical="10dp"
                        android:background="@drawable/button_rounded"
                        android:text="@string/action_change_photo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_button"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Form Fields Section with Padding -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_16"
                android:paddingEnd="@dimen/spacing_16"
                android:paddingTop="@dimen/spacing_16"
                android:paddingBottom="@dimen/spacing_large">

            <!-- Full name label and input styled like Login -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="@string/label_fullname"
                android:textColor="@color/gray_dark" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            app:cardCornerRadius="@dimen/corner_radius_14"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="name"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_profil_v2"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center_vertical"
                android:hint="@string/hint_fullname"
                android:inputType="textPersonName"
                android:padding="@dimen/drawable_padding"
                android:textColorHint="@color/hint_color" />

        </androidx.cardview.widget.CardView>

        <!-- Email (read-only) styled like inputs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/label_email"
            android:textColor="@color/gray_dark" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="emailAddress"
            app:cardCornerRadius="@dimen/corner_radius_14"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="emailAddress"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:padding="@dimen/drawable_padding"
                android:textColorHint="@color/hint_color"
                android:focusable="false"
                android:cursorVisible="false"
                android:textIsSelectable="true"
                android:alpha="0.6"
                android:textColor="@color/muted_text" />

        </androidx.cardview.widget.CardView>

        <!-- Phone label and input styled like Login -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/label_phone"
            android:textColor="@color/gray_dark" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="phone"
            app:cardCornerRadius="@dimen/corner_radius_14"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="phone"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_telepon"
                android:drawablePadding="@dimen/drawable_padding"
                android:gravity="center_vertical"
                android:hint="@string/hint_phone"
                android:inputType="phone"
                android:padding="@dimen/drawable_padding"
                android:textColorHint="@color/hint_color" />

        </androidx.cardview.widget.CardView>

        <!-- Button + spinner container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:text="@string/btn_save"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_button"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="@dimen/spacing_16"
                android:indeterminate="true"
                android:visibility="gone" />

        </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
