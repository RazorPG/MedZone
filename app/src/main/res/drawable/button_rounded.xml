<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed state (slightly darker) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_primary_dark"/>
            <corners android:radius="@dimen/corner_radius_14"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#3A8DFF"
                android:endColor="#5BA3FF" />
            <corners android:radius="@dimen/corner_radius_14"/>
        </shape>
    </item>

    <!-- default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_primary"/>
            <corners android:radius="@dimen/corner_radius_14"/>
        </shape>
    </item>
</selector>