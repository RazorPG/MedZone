<resources>
    <!-- Base application theme. -->
    <!-- Force a light (non-night) MaterialComponents theme so UI doesn't invert in dark mode -->
    <style name="Theme.MedZone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color: force blue to match app header -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Default widget styles (use Arial via @font/arial) -->
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>

        <!-- Customize your theme here. -->
    </style>
</resources>