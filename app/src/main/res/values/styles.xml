<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Reusable widget styles that use the bundled Arial font -->
    <style name="CustomTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="CustomButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <style name="CustomEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

</resources>
